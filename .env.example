# App settings
DEBUG=false

# API settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["*"]

# Temp directory
TEMP_DIR=./tmp/meeting_recordings

# Speech-to-text settings
SPEECH_PROVIDER=openai  # "openai" or "google"
OPENAI_API_KEY=your-openai-api-key-here

# Data extraction settings
USE_LLM=true

# Google Sheets settings
GOOGLE_CREDENTIALS_FILE=./credentials/google-service-account.json
GOOGLE_SPREADSHEET_ID=your-google-spreadsheet-id-here

# Notification settings
NOTIFICATION_TYPE=none  # "none", "slack", or "email"

# Slack notification settings (if NOTIFICATION_TYPE=slack)
SLACK_WEBHOOK_URL=your-slack-webhook-url-here

# Email notification settings (if NOTIFICATION_TYPE=email)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@example.com
SENDER_PASSWORD=your-app-password-here
RECIPIENT_EMAILS=recipient1@example.com,recipient2@example.com
